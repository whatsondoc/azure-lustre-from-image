{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "artifactsBaseUrl": {
      "value": "https://raw.githubusercontent.com/arsenvlad/azure-lustre-from-image/master"
    },
    "location": {
      "value": "eastus"
    },
    "imageName": {
      "value": "<<_image_name_>>"
    },
    "imageOSDiskBlobUri": {
      "value": "<<_image_URI_>>"
    },
    "vmNamePrefix": {
      "value": "lustre"
    },
    "publicIPAddressDomainNameLabel": {
      "value": "<<_pip_dns_label_>>"
    },
    "publicIPAddressNewOrExisting": {
      "value": "new"
    },
    "adminUsername": {
      "value": "<<_admin_username_>>"
    },
    "adminPassword": {
      "value": "<<_admin_password_>>"
    },
    "authenticationType": {
      "value": "sshPublicKey"
    },
    "sshPublicKey": {
      "value": "<<_ssh_public_key_>>"
    },
    "mgsVmSize": {
      "value": "Standard_DS3_v2"
    },
    "mdsVmSize": {
      "value": "Standard_DS13_v2"
    },
    "ossVmSize": {
      "value": "Standard_DS13_v2"
    },
    "ossCount": {
      "value": 4
    },
    "ossDiskSize": {
      "value": 512
    },
    "ossDiskCount": {
      "value": 4
    }
  }
}
